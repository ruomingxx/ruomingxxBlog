extends ../layout/app

block page_title
  h1 Posts Archive
  p Look back and find something interesting.

block title
  = viewHelper.metaTitle("Posts Archive")

block content 
  .post
    .content
      .year
        h2 2017
        ul.archive-list
          for post in posts
            if post.getCreatedAt().getYear() == (2017 - 1900)
              li
                span.month
                  = viewHelper.getMonthAndDay(post.getCreatedAt())
                span &nbsp;&nbsp;Â·&nbsp;
                a(href="/posts/#{post.getPermalink().length() > 0 ? post.getPermalink() : post.getId()}")
                  = post.getTitle()
